<h1> <%= @board.name %></h1>

<div class="board-columns">
    <%= for c <- @board.columns do %>
    <div class="board-column">
        <h3 class="board-title"><%= c.title %></h3>
            <%= for card <- c.cards do %>
            <div class="card">
            <%= card.content %>
            </div>
    <% end %>
        <div class="centered">
            <%= link "add", to: Routes.board_card_path(@conn, :new, @board.id, column_id: c.id) %>
        </div>
    </div>
    <% end %>
</div>

<span><%= link "Back", to: Routes.board_path(@conn, :index) %></span>
