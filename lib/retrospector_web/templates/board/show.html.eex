<h1> <%= @board.name %></h1>

<div class="board-columns">
    <%= for c <- @board.columns do %>
    <div class="board-column">
        <h3 class="board-title"><%= c.title %></h3>
        <div class="centered">
            <%= button("add", to: Routes.card_path(@conn, :new ), method: "get") %>
        </div>
    </div>
    <% end %>
</div>

<span><%= link "Back", to: Routes.board_path(@conn, :index) %></span>
